<div class="mt-3 mb-4">
<h1>ブートクセェ付箋アプリ</h1>
<%= form_with(model: @note, local: true, class: "row") do |f| %>
	<div class="form-group col-3">
		<%= f.label :title, 'タイトル', class: 'col-form-label' %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>

	<div class="form-group col-7">
		<%= f.label :content, 'テキスト', class: 'col-form-label' %>
		<%= f.text_field :content, class: 'form-control' %>
	</div>
	<div class="form-group col-2">
		<div style='position: absolute; bottom: 0;'>
			<%= f.submit '新規', class: 'btn btn-primary'%>
		</div>
	</div>
<% end %>
</div>

	<table class="table table-striped">
		<tr>
			<th>タイトル</th>
			<th>テキスト</th>
			<th>操作</th>
		</tr>
		<% @notes.each do |note| %>
			<tr>
				<td><%= note.title %></td>
				<td><%= link_to note.content, note.content.to_s, target: :_blank %></td>
				<td><%= link_to '編集', edit_note_path(note.id) %> <%= link_to '削除', note_path(note.id), method: :delete %></td>
			</tr>
		<% end %>
	</table>

<%= paginate @notes %>
