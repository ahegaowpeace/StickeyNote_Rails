<h1>トップページ</h1>
<%= form_with(model: @note) do |f| %>
	<div>
		<%= f.label :title, 'タイトル' %>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :content, 'テキスト' %>
		<%= f.text_field :content %>
	</div>
		<%= f.submit '新規作成' %>
<% end %>

<% @notes.each do |note| %>
	<p><%= link_to note.id, edit_note_path(note.id) %> : <%= note.title %> : <%= note.content %> <%= link_to '削除', note_path(note.id), method: :delete %></p>
<% end %>

<%= paginate @notes %>
